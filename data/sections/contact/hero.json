{
  "sectionClasses": "relative min-h-[90vh] flex items-center justify-center text-white overflow-hidden pt-28 pb-16 md:pt-24 md:pb-0",
  "background": {
    "mainBackground": {
      "classes": "absolute inset-0"
    },
    "overlay": {
      "classes": "absolute inset-0 bg-black/60 z-10"
    },
    "pattern": {
      "containerClasses": "absolute inset-0 opacity-5 z-20",
      "innerClasses": "absolute inset-0 bg-[url('/patterns/circuit-pattern.svg')] bg-repeat"
    },
    "decorativeElements": []
  },
  "content": {
    "containerClasses": "container relative z-30 px-4 md:px-6",
    "wrapperClasses": "flex flex-col items-center justify-center text-center",
    "mainContent": {
      "containerClasses": "w-full max-w-2xl flex flex-col items-center text-center",
      "badge": {
        "text": "Get in Touch",
        "classes": "inline-block px-4 py-1 bg-white/10 backdrop-blur-sm text-white text-sm font-medium rounded-full mb-4 shadow-sm"
      },
      "title": {
        "containerClasses": "mb-6 w-full",
        "textClasses": "text-4xl md:text-5xl lg:text-6xl font-bold text-white tracking-tight leading-tight",
        "text": "Contact<br />Innovation Lab"
      },
      "description": {
        "classes": "text-lg md:text-xl text-white/90 max-w-xl mb-8",
        "text": "Have questions or want to collaborate? Reach out to our team and we'll get back to you as soon as possible."
      },
      "buttons": {
        "containerClasses": "flex flex-col sm:flex-row flex-wrap gap-4 justify-center",
        "sendMessage": {
          "href": "#contact-form",
          "classes": "inline-flex items-center justify-center bg-[#0066FF] text-white font-medium text-base px-6 md:px-8 py-3 rounded-full shadow-md w-full sm:w-auto",
          "text": "Send a Message"
        },
        "findLocation": {
          "href": "#map-section",
          "classes": "inline-flex items-center justify-center bg-transparent border-2 border-white text-white font-medium text-base px-6 md:px-8 py-3 rounded-full w-full sm:w-auto",
          "text": "Find Our Location"
        }
      }
    },
    "backgroundImage": {
      "src": "/contact.JPG",
      "alt": "Innovation Lab Team Collaboration"
    }
  },
  "animations": {
    "title": {
      "textShadow": {
        "from": "0 0 0 rgba(255,255,255,0)",
        "to": "0 0 10px rgba(255,255,255,0.3)",
        "duration": 1.2,
        "ease": "power2.out",
        "delay": 0.2
      },
      "scale": {
        "from": 0.98,
        "to": 1,
        "duration": 0.8,
        "ease": "back.out(1.2)",
        "delay": 0.2
      }
    },
    "subtitle": {
      "opacity": {
        "from": 0,
        "to": 1,
        "duration": 0.7,
        "delay": 0.6
      },
      "y": {
        "from": 20,
        "to": 0,
        "duration": 0.7,
        "delay": 0.6
      }
    },
    "buttons": {
      "opacity": {
        "from": 0,
        "to": 1,
        "duration": 0.6,
        "delay": 0.8,
        "stagger": 0.15
      },
      "y": {
        "from": 15,
        "to": 0,
        "duration": 0.6,
        "delay": 0.8,
        "stagger": 0.15
      },
      "scale": {
        "from": 0.95,
        "to": 1,
        "duration": 0.6,
        "delay": 0.8,
        "stagger": 0.15,
        "ease": "back.out(1.5)"
      }
    },
    "buttonHover": {
      "sendMessage": {
        "scale": 1.05,
        "duration": 0.3,
        "ease": "back.out(1.5)",
        "boxShadow": "0 10px 25px rgba(0, 102, 255, 0.5)"
      },
      "findLocation": {
        "scale": 1.05,
        "duration": 0.3,
        "ease": "back.out(1.5)",
        "backgroundColor": "rgba(255, 255, 255, 0.15)"
      }
    }
  }
}
