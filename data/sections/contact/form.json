{
  "sectionClasses": "py-16 md:py-24",
  "sectionId": "contact-form",
  "container": {
    "classes": "container mb-12 md:mb-16 px-4 md:px-6"
  },
  "layout": {
    "classes": "grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12 lg:gap-16"
  },
  "form": {
    "containerClasses": "order-2 lg:order-1 mb-8 lg:mb-0",
    "boxClasses": "bg-white rounded-2xl shadow-lg p-6 md:p-8 lg:p-10 relative overflow-hidden",
    "decorativeElements": [
      {
        "classes": "absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-[#0066FF]/5 to-[#5045E8]/5 rounded-full -mr-16 -mt-16"
      },
      {
        "classes": "absolute bottom-0 left-0 w-24 h-24 bg-gradient-to-tr from-[#0066FF]/5 to-[#5045E8]/5 rounded-full -ml-12 -mb-12"
      }
    ],
    "content": {
      "containerClasses": "relative",
      "title": {
        "text": "Send Us a Message",
        "classes": "text-2xl md:text-3xl font-bold mb-6"
      },
      "successMessage": {
        "containerClasses": "bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg mb-6 animate-fadeIn",
        "icon": {
          "classes": "w-5 h-5 mr-2",
          "viewBox": "0 0 24 24",
          "path": "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z",
          "strokeLinecap": "round",
          "strokeLinejoin": "round",
          "strokeWidth": "2"
        },
        "text": "Thank you for your message! We'll get back to you soon."
      },
      "errorMessage": {
        "containerClasses": "bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6 animate-fadeIn",
        "icon": {
          "classes": "w-5 h-5 mr-2",
          "viewBox": "0 0 24 24",
          "path": "M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
          "strokeLinecap": "round",
          "strokeLinejoin": "round",
          "strokeWidth": "2"
        }
      },
      "form": {
        "ariaLabel": "Contact form",
        "fields": {
          "containerClasses": "grid grid-cols-1 sm:grid-cols-2 gap-4 md:gap-6 mb-6",
          "name": {
            "id": "name",
            "name": "name",
            "type": "text",
            "label": "Your Name",
            "required": true,
            "placeholder": "John Doe",
            "labelClasses": "text-sm font-medium text-gray-700 mb-1",
            "inputClasses": "px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#0066FF] focus:border-transparent",
            "errorClasses": "border-red-500",
            "errorMessageClasses": "text-red-500 text-xs mt-1"
          },
          "email": {
            "id": "email",
            "name": "email",
            "type": "email",
            "label": "Email Address",
            "required": true,
            "placeholder": "john@example.com",
            "labelClasses": "text-sm font-medium text-gray-700 mb-1",
            "inputClasses": "px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#0066FF] focus:border-transparent",
            "errorClasses": "border-red-500",
            "errorMessageClasses": "text-red-500 text-xs mt-1"
          },
          "subject": {
            "id": "subject",
            "name": "subject",
            "type": "text",
            "label": "Subject",
            "required": true,
            "placeholder": "How can we help you?",
            "labelClasses": "text-sm font-medium text-gray-700 mb-1",
            "inputClasses": "px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#0066FF] focus:border-transparent",
            "errorClasses": "border-red-500",
            "errorMessageClasses": "text-red-500 text-xs mt-1",
            "containerClasses": "flex flex-col mb-4 md:mb-6 form-item"
          },
          "message": {
            "id": "message",
            "name": "message",
            "type": "textarea",
            "label": "Message",
            "required": true,
            "placeholder": "Your message here...",
            "rows": 4,
            "labelClasses": "text-sm font-medium text-gray-700 mb-1",
            "inputClasses": "px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#0066FF] focus:border-transparent resize-none",
            "errorClasses": "border-red-500",
            "errorMessageClasses": "text-red-500 text-xs mt-1",
            "containerClasses": "flex flex-col mb-4 md:mb-6 form-item"
          }
        },
        "submitButton": {
          "variant": "primary",
          "size": "lg",
          "type": "submit",
          "classes": "w-full sm:w-auto bg-gradient-to-r from-[#0066FF] to-[#5045E8] hover:from-[#0055DD] hover:to-[#4035D8] transform hover:scale-[1.02] transition-all duration-300 shadow-md hover:shadow-lg cursor-pointer mt-2",
          "loadingState": {
            "text": "Sending...",
            "icon": {
              "classes": "animate-spin -ml-1 mr-2 h-5 w-5 text-white",
              "viewBox": "0 0 24 24",
              "circle": {
                "classes": "opacity-25",
                "cx": "12",
                "cy": "12",
                "r": "10",
                "stroke": "currentColor",
                "strokeWidth": "4"
              },
              "path": {
                "classes": "opacity-75",
                "fill": "currentColor",
                "d": "M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
              }
            }
          },
          "normalState": {
            "text": "Send Message",
            "icon": {
              "classes": "mr-2 h-5 w-5",
              "viewBox": "0 0 24 24",
              "path": {
                "d": "M12 19l9 2-9-18-9 18 9-2zm0 0v-8",
                "stroke": "currentColor",
                "strokeWidth": "2",
                "strokeLinecap": "round",
                "strokeLinejoin": "round"
              }
            }
          }
        }
      }
    }
  },
