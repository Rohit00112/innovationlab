{
  "sectionClasses": "relative min-h-[300px] md:h-[400px] w-full overflow-hidden mt-20",
  "background": {
    "image": {
      "src": "/event_gallery1.JPG",
      "alt": "Team collaborating around laptop",
      "classes": "object-cover",
      "priority": true,
      "quality": 95
    },
    "overlays": [
      {
        "classes": "absolute inset-0 bg-black/40 z-5"
      },
      {
        "classes": "absolute inset-0 bg-black/40 z-5"
      }
    ]
  },
  "content": {
    "containerClasses": "absolute bottom-8 left-0 right-0 z-10 px-4 md:px-8 lg:px-16 flex flex-col md:flex-row justify-between items-center md:items-end gap-4",
    "eventInfoCard": {
      "containerClasses": "flex bg-[#0066FF] text-white rounded-md overflow-hidden shadow-xl event-info-card w-full md:w-auto",
      "dateBox": {
        "containerClasses": "flex flex-col items-center justify-center px-4 py-3 w-24 event-date",
        "monthClasses": "text-white text-sm font-medium",
        "dayClasses": "text-white text-4xl font-bold leading-none mt-1",
        "timeClasses": "text-white text-sm font-medium mt-1"
      },
      "details": {
        "containerClasses": "flex flex-col p-4 pl-5 pr-8",
        "tagline": {
          "classes": "text-white/90 text-sm font-medium event-tagline"
        },
        "title": {
          "classes": "text-white text-2xl font-bold mt-1 event-title"
        },
        "location": {
          "containerClasses": "flex items-center mt-2 event-location",
          "icon": {
            "classes": "w-4 h-4 text-white/80 mr-1",
            "viewBox": "0 0 24 24",
            "paths": [
              {
                "d": "M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z",
                "strokeLinecap": "round",
                "strokeLinejoin": "round",
                "strokeWidth": "2"
              },
              {
                "d": "M15 11a3 3 0 11-6 0 3 3 0 016 0z",
                "strokeLinecap": "round",
                "strokeLinejoin": "round",
                "strokeWidth": "2"
              }
            ]
          },
          "textClasses": "text-white/80 text-sm"
        }
      }
    },
    "actionButtons": {
      "containerClasses": "flex gap-2 w-full md:w-auto justify-center md:justify-end",
      "registerButton": {
        "href": "https://docs.google.com/forms/d/e/1FAIpQLSfDn9Evo7cRpeGIe45MWdvbYKRB3rj8wpVjNGV5FwwFnBGPRg/viewform",
        "variant": "primary",
        "size": "md",
        "classes": "register-btn bg-[#0066FF] text-white font-medium hover:bg-blue-600 transition-all duration-300 flex items-center py-2 px-4 rounded",
        "text": "Register Now",
        "icon": {
          "text": "â†’",
          "classes": "ml-1"
        },
        "target": "_blank",
        "rel": "noopener noreferrer"
      },
      "shareButton": {
        "href": "#share",
        "variant": "outline",
        "size": "md",
        "classes": "share-btn bg-black/30 backdrop-blur-sm border border-white/30 text-white font-medium hover:bg-black/40 transition-all duration-300 flex items-center py-2 px-4 rounded",
        "text": "Share Event",
        "icon": {
          "classes": "w-4 h-4 ml-2",
          "viewBox": "0 0 24 24",
          "path": {
            "d": "M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z",
            "strokeLinecap": "round",
            "strokeLinejoin": "round",
            "strokeWidth": "2"
          }
        }
      }
    }
  },
  "animations": {
    "headerTimeline": {
      "eventInfoCard": {
        "y": 30,
        "opacity": 0,
        "duration": 0.8,
        "ease": "power3.out"
      },
      "eventDate": {
        "opacity": 0,
        "duration": 0.5,
        "ease": "power2.out",
        "delay": "-=0.5"
      },
      "eventTagline": {
        "y": 10,
        "opacity": 0,
        "duration": 0.4,
        "ease": "power2.out",
        "delay": "-=0.3"
      },
      "eventTitle": {
        "y": 10,
        "opacity": 0,
        "duration": 0.4,
        "ease": "power2.out",
        "delay": "-=0.2"
      },
      "eventLocation": {
        "y": 10,
        "opacity": 0,
        "duration": 0.4,
        "ease": "power2.out",
        "delay": "-=0.2"
      },
      "actionButtons": {
        "y": 20,
        "opacity": 0,
        "duration": 0.5,
        "stagger": 0.2,
        "ease": "power2.out",
        "delay": "-=0.2"
      }
    }
  }
}
