{
  "sectionClasses": "related-events-section py-16 bg-gray-50",
  "container": {
    "classes": "container mx-auto px-4"
  },
  "header": {
    "containerClasses": "flex flex-col items-center mb-12 text-center",
    "icon": {
      "containerClasses": "w-16 h-16 rounded-full bg-[#0066FF]/10 flex items-center justify-center mb-4",
      "classes": "w-8 h-8 text-[#0066FF]",
      "viewBox": "0 0 24 24",
      "path": {
        "d": "M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10",
