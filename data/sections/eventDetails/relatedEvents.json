        "sizes": "(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 33vw"
      },
      "content": {
        "containerClasses": "p-6",
        "date": {
          "containerClasses": "flex items-center text-sm text-gray-500 mb-2",
          "icon": {
            "classes": "w-4 h-4 mr-2 text-gray-400",
            "viewBox": "0 0 24 24",
            "path": {
              "d": "M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z",
              "strokeLinecap": "round",
              "strokeLinejoin": "round",
              "strokeWidth": "2"
            }
          }
        },
        "title": {
          "classes": "text-xl font-bold text-gray-900 mb-2 hover:text-[#0066FF] transition-colors duration-300"
        },
        "location": {
          "containerClasses": "flex items-center text-sm text-gray-500 mb-4",
          "icon": {
            "classes": "w-4 h-4 mr-2 text-gray-400",
            "viewBox": "0 0 24 24",
            "path": {
              "d": "M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z",
